<div class="twelve columns">
  <div class="logo-container">
    <center><%= link_to image_tag("pleased-io.png", class: "responsive-image max-width-100"), root_path %></center>
    <hr>
  </div>
</div>

<div class="row">
  <div class="five columns">
    <h4>Get Started</h4>
    <%= render partial: '/users/form' %>
    <p class="center text-inactive">By signing up, you agree
to our <br><a href="#">Terms</a> & <a href="#">Privacy</a> policies.</p>

    <div id="flash">
      <% flash.each do |key, value| -%>
        <div id="flash_<%= key %>"><%=h value %></div>
      <% end %>
    </div>
  </div>

  <div class="seven columns">
    <div class="benifits">
      <h4>Why Pleased.io ?</h4>
      <i class="ion-android-checkmark-circle icon-32 text-brand inline"> </i> <h5 class="inline"> Try Before you Buy</h5>
      <br>
      <i class="ion-android-checkmark-circle icon-32 text-brand inline"> </i> <h5 class="inline"> No Credit Card Required</h5>
      <br>
      <i class="ion-android-checkmark-circle icon-32 text-brand inline"> </i> <h5 class="inline"> No Strings Attached</h5>
    </div>
  </div>
</div>
