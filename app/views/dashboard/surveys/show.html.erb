<%#= @survey.company_name %>

<!-- <h4>Preview</h4> -->
<div class="row">
  <div class="seven columns">
    <h6 class="center">Desktop Preview</h6>
    <div class="browser-mockup with-url" style="margin:0;">
      <!-- <img src="http://placehold.it/600x500/fff/eee" /> -->
      <!-- <img src="https://www.filepicker.io/api/file/aOM0gTabRvK3nSHnlUdH" /> -->
      <!-- <iframe src="https://www.filepicker.io/api/file/aOM0gTabRvK3nSHnlUdH" style="width: 100%; height: 730px;"></iframe> -->
      <div class="email desktop">
        <div class="row">
          <div class="two columns small">From:</div> <div class="ten columns small"><%= @survey.company_name %> <<span class="text-inactive"><%= @survey.email_from %></span>></div>
        </div>

        <div class="row">
          <div class="two columns small">Reply To:</div> <div class="ten columns small"><%= @survey.company_name %> <<span class="text-inactive"><%= @survey.reply_to_email %></span>></div>
        </div>

        <div class="row">
          <div class="two columns small">To:</div> <div class="ten columns small">John Doe <<span class="text-inactive">john@doe.com</span>></div>
        </div>
        <hr>
        <p class="small">Subject: <strong><%= @survey.survey_subject %></strong></p>
        <p class="devider" style="background-color: #FF5A5F; height: 3px"></p>
        <div class="row">
          <div class="offset-by-four four columns">
            <%= image_tag('logo.png', class: 'img-responsive') %>
            <hr>
            <!-- <img src="http://500.co/uploads/logo-536aa95d4a95f41663a84cea.png" class="img-responsive"> -->
          </div>
        </div>

        <div class="row">
          <p class="center"><%= @survey.survey_body %></p>
        </div>
        <br>

        <style type="text/css">
          .number-rating{
            font-size: 20px;
            margin-left: 10px;
            text-decoration: none;
            border-radius: 5px;
            padding: 7px;
            color: #FF5A5F;
            border: 2px solid #FF5A5F;
          }
        </style>
        <p class="center">
          <a href="#" class="number-rating">1</a>
          <a href="#" class="number-rating">2</a>
          <a href="#" class="number-rating">3</a>
          <a href="#" class="number-rating">4</a>
          <a href="#" class="number-rating">5</a>
          <a href="#" class="number-rating">6</a>
          <a href="#" class="number-rating">7</a>
          <a href="#" class="number-rating">8</a>
          <a href="#" class="number-rating">9</a>
          <a href="#" class="number-rating">10</a>
        </p>
        <p class="center small">(1 being unsatisfied - 10 being highly satisfied)</p>
        <br><br>
        <hr>
        <p class="small center text-inactive">Thank you, it means a lot to us.</p>
        <br>
        <span class="u-pull-left text-light small">Unsubscribe</span>
        <span class="u-pull-right text-light small">Powered by Pleased.io</span>
      </div>
    </div>
  </div>

  <div class="five columns">
    <h6 class="center">Mobile Preview</h6>
    <div class="browser-mockup" style="margin:0;">
      <!-- <img src="https://www.filepicker.io/api/file/aOM0gTabRvK3nSHnlUdH" style="width: 100%; height: 600px;" /> -->
      <!-- <iframe src="http://localhost:8000/email.html" style="width: 95%; height: 600px;"></iframe> -->
