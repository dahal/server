<p class="center"><%= t '.description' %></p>

<%= form_for :password_reset,
  url: user_password_path(@user, token: @user.confirmation_token),
  html: { method: :put } do |form| %>
  <%= form.password_field :password, class: 'u-full-width', placeholder: 'Password' %>

  <%= form.submit %>
<% end %>
