<div class="offset-by-three column six columns">
  <div class="logo-container">
    <center><%= link_to image_tag("pleased-io.png", class: "responsive-image max-width-100"), root_path %></center>
  </div>
  <p class="center"><%= t '.description' %></p>

  <%= form_for :password_reset,
    url: user_password_path(@user, token: @user.confirmation_token),
    html: { method: :put } do |form| %>
    <%= form.password_field :password, class: 'u-full-width', placeholder: 'Password' %>

    <%= form.submit %>
  <% end %>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>
</div>
