<div class="offset-by-three column six columns">
  <div class="logo-container">
    <center><%= link_to image_tag("pleased-io.png", class: "responsive-image max-width-100"), root_path %></center>
  </div>
  <%= form_for :password, url: passwords_path do |form| %>
    <%= form.text_field :email, type: 'email', class: 'u-full-width', placeholder: 'Email' %>
    <%= form.submit %>
    <p class="center"><%= t '.description' %></p>
  <% end %>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>
</div>
