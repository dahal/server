<div class="offset-by-three column six columns">
  <div class="logo-container">
    <center><%= image_tag("pleased-io.png", class: "responsive-image max-width-100") %></center>
  </div>
  <%= form_for :session, url: session_path do |form| %>
    <%= form.text_field :email, type: 'email', class: 'u-full-width', placeholder: 'Email' %>
    <%= form.password_field :password, class: 'u-full-width', placeholder: 'Password' %>
    <%= form.submit "Sign in" %>

    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to 'Sign Up', sign_up_path, class: 'enough-space' %>
    <% end %>
    <%= link_to t('.forgot_password'), new_password_path, class: 'enough-space' %>
  <% end %>
  <i class="ion-ios-checkmark icon-48 text-success"></i>
  <br>
  <i class="ion-ios-checkmark-outline icon-48 text-inactive"></i>

  <div id="flash">
    <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
    <% end %>
  </div>
</div>

